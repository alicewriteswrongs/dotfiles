[core]
    excludesfile = /home/alice/dotfiles/git/gitignore
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
    conflictStyle = diff3
[difftool]
    prompt = false
[rebase]
    autosquash = true
[status]
    showUntrackedFiles = all
[alias]
    db = 'branch -D'
    cc = checkout
    gd = git diff
[pull]
	ff = only
[init]
	defaultBranch = main

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only --hyperlinks

[delta]
    features = line-numbers decorations
    whitespace-error-style = 22 reverse
    syntax-theme = Solarized (light)

